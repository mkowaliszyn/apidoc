{
    "name": "apidoc form",
    "description": "Specification of the form used to define services in apidoc",
    "base_url": "http://api.apidoc.me",

    "models": {
	"service_form": {
	    "fields": [
		{ "name": "name", "type": "string" },
		{ "name": "base_url", "type": "string", "required": false },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "headers", "type": "[header_form]" },
		{ "name": "enums", "type": "map[enum_form]" },
		{ "name": "models", "type": "map[model_form]" },
		{ "name": "resources", "type": "map[resource_form]", "description": "keys are the names of a model" }
	    ]
	},

	"enum_form": {
	    "fields": [
		{ "name": "description", "type": "string", "required": false },
		{ "name": "values", "type": "[enum_value_form]" }
	    ]
	},

	"enum_value_form": {
	    "fields": [
		{ "name": "name", "type": "string" },
		{ "name": "description", "type": "string", "required": false }
	    ]
	},

	"model_form": {
	    "fields": [
		{ "name": "plural", "type": "string", "required": false, "description": "Defaults to the plural of the model name. Used to generate resource paths which by default map to the plural of the model name" },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "fields", "type": "[field_form]" }
	    ]
	},

	"field_form": {
	    "fields": [
		{ "name": "name", "type": "string" },
		{ "name": "type", "type": "string" },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "default", "type": "string", "required": false },
		{ "name": "required", "type": "boolean", "default": true },
		{ "name": "minimum", "type": "long", "required": false },
		{ "name": "maximum", "type": "long", "required": false },
		{ "name": "example", "type": "string", "required": false }
	    ]
	},

	"resource_form": {
	    "fields": [
		{ "name": "description", "type": "string", "required": false },
		{ "name": "path", "type": "string", "required": false, "description": "Defaults to the plural of the model name" },
		{ "name": "operations", "type": "[operation_form]" }
	    ]
	},

	"operation_form": {
	    "fields": [
		{ "name": "method", "type": "string", "example": "GET" },
		{ "name": "path", "type": "string", "required": false },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "body", "type": "body_form", "required": false },
		{ "name": "parameters", "type": "[parameter_form]", "required": false },
		{ "name": "responses", "type": "map[response_form]", "required": false, "description": "Keys are HTTP status codes" }
	    ]
	},

	"body_form": {
	    "fields": [
		{ "name": "type", "type": "string" },
		{ "name": "description", "type": "string", "required": false }
	    ]
	},

	"parameter_form": {
	    "fields": [
		{ "name": "name", "type": "string" },
		{ "name": "type", "type": "string" },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "required", "type": "boolean", "default": true },
		{ "name": "default", "type": "string", "required": false },
		{ "name": "minimum", "type": "long", "required": false },
		{ "name": "maximum", "type": "long", "required": false },
		{ "name": "example", "type": "string", "required": false }
	    ]
	},

	"response_form": {
	    "fields": [
		{ "name": "type", "type": "string" }
	    ]
	},

	"header_form": {
	    "fields": [
		{ "name": "name", "type": "string" },
		{ "name": "type", "type": "string" },
		{ "name": "description", "type": "string", "required": false },
		{ "name": "required", "type": "boolean" },
		{ "name": "default", "type": "string", "required": false }
	    ]
	}

    }

}
